@using Dto
@model PhotoModel
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">@Model.Title</h5>
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row p-4 text-center">
                <p>Tags : @Model.Tags</p>
            </div>
            <div class="row">
                <img src="/img/@Model.Path" width="100%" height="auto" />
            </div>
            <div class="row p-4 text-center">
                <button type="button" class="btn" onclick="Delete(@Model.Id)">Delete Photo</button>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            @*<button type="button" class="btn btn-primary">Save changes</button>*@
        </div>
    </div>
</div>
<script>
    function Delete (Id){
        window.location.href = '/Home/DeletePhoto?Id=' + Id;

    }
</script>